<% set_meta_tags title: '細かい条件から探す' %>
<div class="container mt-5 pt-5">
  <div class="row justify-content-center">
    <h1 class="col-auto text-muted text-center">
      詳細検索<br>
    </h1>
  </div>
</div>


<%= search_form_for @q, url: whiskeys_path, class: 'container my-5' do |f| %>
  <div class="row justify-content-center">
    <div class="ui action large input col-lg-4 col-md-6 col-10">
      <%= f.text_field :name_or_description_cont, class: 'rounded-left border-0', placeholder: 'ウイスキー名を入力' %>
      <%= button_tag type: :submit, class: 'ui icon button rounded-right bg-white' do %>
        <i class="fa-solid fa-magnifying-glass fa-xl hover-target-reverse f-navy"></i>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-6 col-12">
      <div class="row justify-content-center mt-5 mb-2">
        <%= f.label :processing, class: 'fs-5 fw-bold col-md-10 col-12 m-1 text-muted' %>
      </div>
      <div class="row justify-content-center">
        <div class="col-md-10 col-auto">
          <% Whiskey.processings_i18n.each do |t| %>
            <%= f.label "processing_eq_any_#{t[0]}" do %>
              <%= f.check_box :processing_eq_any, { class: 'btn-check', multiple: true, include_hidden: false }, t[0] %>
              <span class='btn btn-secondary btn-search m-1'><%= t[1] %></span>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>

    <div class="col-sm-6 col-12">
      <div class="row justify-content-center mt-5 mb-2">
        <%= f.label :drink_way_id, class: 'fs-5 fw-bold col-md-10 col-12 m-1 text-muted' %>
      </div>
      <div class="row justify-content-center">
        <div class="col-md-10 col-auto">
          <%= f.collection_check_boxes(:drink_way_id_eq_any, DrinkWay.all, :id, :name) do |t| %>
            <%= t.label do %>
              <%= t.check_box class: 'btn-check' %>
              <span class='btn btn-secondary btn-search m-1'><%= t.text %></span>
            <% end %>
          <% end %>
        </div>
      </div>

      <div class="row justify-content-center mt-5 mb-2">
        <%= f.label :snack_id, class: 'fs-5 fw-bold col-md-10 col-12 m-1 text-muted' %>
      </div>
      <div class="row justify-content-center">
        <div class="col-md-10 col-auto">
          <%= f.collection_check_boxes(:snack_id_eq_any, Snack.all, :id, :name) do |t| %>
            <%= t.label do %>
              <%= t.check_box class: 'btn-check' %>
              <span class='btn btn-secondary btn-search m-1'><%= t.text %></span>
            <% end %>
          <% end %>
        </div>
      </div>

      <div class="row justify-content-center mt-5 mb-2">
        <%= f.label :flavor_id, class: 'fs-5 fw-bold col-md-10 col-12 m-1 text-muted' %>
      </div>
      <div class="row justify-content-center">
        <div class="col-md-10 col-auto">
          <%= f.collection_check_boxes(:flavors_id_eq_any, Flavor.all, :id, :name) do |t| %>
            <%= t.label do %>
              <%= t.check_box class: 'btn-check' %>
              <span class='btn btn-secondary btn-search m-1'><%= t.text %></span>
            <% end %>
          <% end %>
        </div>
      </div>

    </div>
  </div>
  


  
  
  <div class="row justify-content-center mt-5 mb-2">
    <%= f.submit '　絞り込む　', class: 'ui button orange col-auto' %>
  </div>

<% end %>
