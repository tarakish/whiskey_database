<!-- 投稿 -->
<div class="container mt-15">
  <div class="row justify-content-center">
    <h1 class="col-auto text-muted text-center">
      <em>Tasting Notes</em><br>
      <span class="fs-3">〜ユーザー投稿〜</span><br>
    </h1>
  </div>
  <div class="row justify-content-center mt-4 mb-5">
    <div class="col-lg-9 col-6 ui divider border-2">
    </div>
  </div>
</div>

<div class="container mb-5">
  <%= render partial: 'tasting_notes/note', collection: @tasting_notes %>
</div>

<!-- 投稿フォーム -->
<% if current_user %>
  <%= render 'create_tasting_note', { tasting_note: @tasting_note, whiskey: @whiskey } %>
<% end %>

<!-- レコメンド-->
