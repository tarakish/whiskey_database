<!-- 主情報 -->
<div class="container mt-5 pt-5">
  <div class="row justify-content-center">
    <div class="col-lg-9 col-auto row justify-content-center text-center rounded shadow bg-white">
      <div class="col-lg-4 text-center">
        <div class="col-12 my-5">
          <!-- 階層を変えるとインプレッション用の画像が表示されてしまうため改行しない -->
          <%= link_to @whiskey.amazon_link, target: '_blank' do %><%= image_tag @whiskey.amazon_image_link, class: 'border-none' %><% end %> 
          <%= image_tag @whiskey.amazon_impression_link, alt: '', size: '1x1', style: 'border:none !important; margin:0px !important' %>
        </div>
        <div class="col-auto mb-3 pt-3 ms-3">
          <div class='row-lg d-flex justify-content-center'>
            <div class="col-xl-4 mx-3 p-lg-0 px-4">
              <div class="row fs-6 pie pie-chart-<%= @whiskey.mouth_feel_before_type_cast %>"><%= @whiskey.mouth_feel_i18n %></div>
              <div class="mt-3 text-start">　 味わい</div>
            </div>
            <div class="col-xl-4 mx-3 p-lg-0 px-4">
              <div class="row fs-6 m-0 pie pie-chart-<%= @whiskey.flavor_strength_before_type_cast %>"><%= @whiskey.flavor_strength_i18n %></div>
              <div class="mt-3">フレーバー</div>
            </div>
          </div>
        </div>
      </div>
      <div class="col-lg-7 text-lg-start ms-lg-5 my-5">
        <div class="row justify-content-lg-between justify-content-center mb-3">
          <h5 class="col-lg-auto col-12 text-muted my-auto order-lg-0 order-1">
            <%= @whiskey.region %>
          </h5>
          <span class="col-auto text-muted text-center mb-lg-auto mb-5 order-lg-1 order-0">
            <%= render 'bookmark_button', whiskey: @whiskey if logged_in? %>
          </span>
        </div>
      
        <div class="row justify-content-lg-start justify-content-center">
          <h1 class="col-auto my-4">
            <%= @whiskey.name %>
          </h1>
        </div>

        <div class="row justify-content-lg-start justify-content-center">
          <h6 class="mt-4">
            <%= render partial: 'flavor', collection: @whiskey.flavors %>
          </h6>
        </div>

        <div class="row justify-content-lg-start justify-content-center">
          <h6 class="spacing-text mx-lg-auto m-5">
            <%= simple_format(h(@whiskey.description)) %>
          </h6>
        </div>

        <h4 class="row text-muted my-auto justify-content-center justify-content-lg-start">
          <div class="col-auto pt-3 my-xl-0 my-3">
            <span class="h5 mx-auto">希望小売価格 ¥</span><%= @whiskey.price.to_s(:delimited) %>
          </div>
          <div class="col-auto">
            <%= link_to @whiskey.amazon_link, target: '_blank' do %>
              <button class="amazon_button ms-xl-5 ms-lg-3 my-xl-5 my-3 my-xl-auto"><h4><i class="amazon icon"></i></h4>Find it!</button> <!-- lg幅のボタン配置要改善 -->
            <% end %>
          </div>
        </h4>
      </div>
    </div>
  </div>
</div>

<div class="container mt-5 pt-5">
  <div class="row justify-content-center">
    <h1 class="col-auto text-muted text-center">
      <em>Pairing</em><br>
      <span class="fs-3">〜相性を楽しむ〜</span>
    </h1>
  </div>
  <div class="row justify-content-center mt-4">
    <div class="col-lg-9 col-6 ui divider border-2">
    </div>
  </div>
</div>

<!-- paring -->
<div class="container mt-5">
  <div class="row justify-content-center">
    <%= link_to drink_ways_path(anchor: "#{@whiskey.drink_way.english_name}"), class: 'col-lg-9 row text-center rounded shadow bg-white p-0 transform-y-md simple-a-tag hover-target-reverse' do %>
      <%= image_tag @whiskey.drink_way.image, class: 'img-fluid col-lg-4 p-0' if @whiskey.drink_way.image.attached? %>
      <div class="col-lg-8 my-5">
        <h5 class="text-muted mb-3">
          相性のいい飲み方
        </h5>
        <h1 class="my-4">
          <%= @whiskey.drink_way.name %>
        </h1>
        <h4><em>
          <%= @whiskey.drink_way.english_name %>
        </em></h4>
      </div>
    <% end %>
  </div>
</div>

<div class="container mt-5">
  <div class="row justify-content-center">
    <%= link_to snacks_path(anchor: "#{@whiskey.snack.english_name}"), class: 'col-lg-9 row text-center rounded shadow bg-white p-0 transform-y-md simple-a-tag hover-target-reverse' do %>
      <%= image_tag @whiskey.snack.image, class: 'img-fluid col-lg-4 p-0' if @whiskey.snack.image.attached? %>
      <div class="col-lg-8 my-5">
        <h5 class="text-muted mb-3">
          フードペアリング
        </h5>
        <h1 class="my-4">
          <%= @whiskey.snack.name %>
        </h1>
        <h4><em>
          <%= @whiskey.snack.english_name %>
        </em></h4>
      </div>
    <% end %>
  </div>
</div>
