<p id="notice"><%= notice %></p>

<div class="container mt-5 pt-5">
  <div class="row justify-content-center">
    <h1 class="col-auto text-muted text-center">
      Flavors<br>
      <span class="fs-3">〜フレーバー一覧〜</span>
    </h1>
  </div>
  <div class="row justify-content-center mt-4">
    <div class="col-lg-9 ui divider border-2">
    </div>
  </div>
</div>

<%= render partial: 'flavors', locals: { flavors: @fruity_flavors } %>
<%= render partial: 'flavors', locals: { flavors: @woody_flavors } %>
<%= render partial: 'flavors', locals: { flavors: @winy_flavors } %>
<%= render partial: 'flavors', locals: { flavors: @floral_flavors } %>
<%= render partial: 'flavors', locals: { flavors: @sereal_flavors } %>
<%= render partial: 'flavors', locals: { flavors: @smoky_flavors } %>

<% if current_user.admin? %>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Detail</th>
        <th>Group</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @flavors.each do |flavor| %>
        <tr>
          <td><%= flavor.name %></td>
          <td><%= flavor.detail %></td>
          <td><%= flavor.group %></td>
          <td><%= link_to 'Show', flavor %></td>
          <td><%= link_to 'Edit', edit_flavor_path(flavor) %></td>
          <td><%= link_to 'Destroy', flavor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
  <%= link_to 'New Flavor', new_flavor_path %>
<% end %>
