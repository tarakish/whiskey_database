<header>
  <nav class="navbar navbar-expand-lg navbar-dark fixed-top p-3 header-main">
    <div class="container">
      <%= link_to '/', class: 'navbar-brand d-none d-lg-inline hover-target-reverse' do %>
        <i class="fa-solid fa-whiskey-glass fa-xl"></i> Whiskey Database
      <% end %>
      <%= link_to '/', class: 'navbar-brand d-lg-none d-inline hover-target-reverse' do %>
        <i class="fa-solid fa-wine-bottle fa-xl"></i>
      <% end %>
      <%= form_with url: '#', local: true, class: 'ms-lg-15' do |f| %>
