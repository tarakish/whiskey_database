            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
              <li><%= link_to '飲み方一覧', drink_ways_path, class: 'dropdown-item' %></li>
              <li><%= link_to 'おつまみ一覧', snacks_path, class: 'dropdown-item' %></li>
              <li><%= link_to 'フレーバー一覧', flavors_path, class: 'dropdown-item' %></li>
            </ul>
          </li>
          <li class="nav-item">
            <a class="nav-link fs-5 fw-bold text-decoration-line-through" href="#">Login</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>
</header>
