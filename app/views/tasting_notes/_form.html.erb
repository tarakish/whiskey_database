<div class="modal-dialog">
  <div class="modal-content">
    <%= form_with model: [whiskey, tasting_note] do |form| %>
      <% if tasting_note.errors.any? %>
        <div id="error_explanation">
          <ul>
            <% tasting_note.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="field">
        <%= form.label :comment %>
        <%= form.text_area :comment, required: true %>
      </div>

      <div class="form-group">
        <%= form.label :flavor_id %>
        <%= form.collection_select :flavor_id, Flavor.all, :id, :name, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :drink_way_id %>
        <%= form.collection_select :drink_way_id, DrinkWay.all, :id, :name, class: 'form-control' %>
      </div>

      <div class="actions">
        <%= form.submit %>
      </div>
    <% end %>
  </div>
</div>